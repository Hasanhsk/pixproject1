<Page loaded = "loaded">
<Page.actionBar>
    <ActionBar title="App" class="abar"></ActionBar>
</Page.actionBar>
<StackLayout class="layoutBackgroundImage" orientation="vertical">
    <StackLayout class="layoutBackgroundImage" orientation="vertical"    
        
        
     class = "container" left="30" right="30" top="30" height="420" > 
        
        <Image src="~/images/pic1.png"  ></Image>
        
        <TextField id = "email" hint="Email Address" keyboardType="email" 
        autocorrect="false" autocapitalizationType="none" />
        <TextField id="password" secure="true"  hint="Password" secure="true" />

        <Button text="Sign in" tap="signIn" class="icon-bolt" />
        <Button text="Sign up" class="link" tap = "signup"/>
        <Button text="Logout" class="link" tap = "logout"/>

         
    </StackLayout>
    </StackLayout>
</Page>